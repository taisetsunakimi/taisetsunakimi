<h3>配信履歴画面</h3>

<div align="right">
<%= paginate(@mail_histories) %>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>配信日時</th>
      <th>健診タイプ</th>
      <th>メールアドレス</th>
      <th>件名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mail_histories.order('_id desc').each do |mail_history| %>
      <tr>
        <td><%= DateTime.parse(mail_history.date).strftime("%Y/%m/%d %H:%M:%S") %></td> 
        <td><%= mail_history.notice_config %></td>
        <td><%= mail_history.mailaddr %></td>
        <td><%= mail_history.subject %></td>
        <td><%= link_to '確認', mail_history %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

